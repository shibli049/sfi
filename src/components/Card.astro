---
interface Props {
	title: string;
	description: string;
	href: string;
	badge: string;
	icon: string;
}

const { title, description, href, badge, icon } = Astro.props;
---

<article class="card">
    <div class="card-image">{icon}</div>
    <div class="card-content">
        <span class="badge">{badge}</span>
        <h2 class="card-title">{title}</h2>
        <p class="card-description">{description}</p>
        <a href={href} class="btn">Start Exercise</a>
    </div>
</article>
