---
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const title = "Klockan Quiz - Practice Swedish Time";
---

<Layout title={title}>
    <div class="exercise-container">
        <Breadcrumbs currentPage="Klockan Quiz" />
        
        <div class="header-with-back">
            <a href="/sfi/klockan" class="back-btn">‚Üê Back to Learning</a>
            <h1>üéØ Klockan Quiz</h1>
        </div>
        
        <div class="quiz-intro">
            <p>Test your knowledge of Swedish time expressions! Choose a difficulty level to begin.</p>
        </div>

        <div class="difficulty-selection" id="difficultySelection">
            <h2>Select Difficulty</h2>
            <div class="difficulty-buttons">
                <button class="difficulty-btn" data-difficulty="exact">
                    <div class="difficulty-icon">üü¢</div>
                    <div class="difficulty-name">Beginner</div>
                    <div class="difficulty-desc">Exact hours only</div>
                </button>
                <button class="difficulty-btn" data-difficulty="quarter">
                    <div class="difficulty-icon">üü°</div>
                    <div class="difficulty-name">Easy</div>
                    <div class="difficulty-desc">Quarters (kvart)</div>
                </button>
                <button class="difficulty-btn" data-difficulty="half">
                    <div class="difficulty-icon">üü†</div>
                    <div class="difficulty-name">Medium</div>
                    <div class="difficulty-desc">Half hours (halv)</div>
                </button>
                <button class="difficulty-btn" data-difficulty="mixed">
                    <div class="difficulty-icon">üî¥</div>
                    <div class="difficulty-name">Hard</div>
                    <div class="difficulty-desc">All time expressions</div>
                </button>
            </div>
        </div>

        <div class="quiz-container hidden" id="quizContainer">
            <div class="quiz-header">
                <div class="score-display">
                    <span class="score-label">Score:</span>
                    <span class="score-value" id="scoreValue">0/0</span>
                </div>
                <div class="streak-display">
                    <span class="streak-label">üî• Streak:</span>
                    <span class="streak-value" id="streakValue">0</span>
                </div>
                <button class="quit-btn" id="quitBtn">Exit Quiz</button>
            </div>

            <div class="question-container">
                <div class="question-number" id="questionNumber">Question 1</div>
                
                <div class="clock-display">
                    <svg class="quiz-clock" viewBox="0 0 300 300" id="quizClock">
                        <!-- Clock circle -->
                        <circle cx="150" cy="150" r="135" fill="#f8fafc" stroke="#2d3748" stroke-width="3"/>
                        
                        <!-- Hour markers -->
                        {Array.from({ length: 12 }, (_, i) => {
                            const angle = (i * 30 - 90) * Math.PI / 180;
                            const x1 = 150 + 120 * Math.cos(angle);
                            const y1 = 150 + 120 * Math.sin(angle);
                            const x2 = 150 + 127 * Math.cos(angle);
                            const y2 = 150 + 127 * Math.sin(angle);
                            return (
                                <line 
                                    x1={x1} y1={y1} x2={x2} y2={y2} 
                                    stroke="#2d3748" stroke-width="2"
                                />
                            );
                        })}
                        
                        <!-- Hour numbers -->
                        {Array.from({ length: 12 }, (_, i) => {
                            const hour = i === 0 ? 12 : i;
                            const angle = (i * 30 - 90) * Math.PI / 180;
                            const x = 150 + 100 * Math.cos(angle);
                            const y = 150 + 100 * Math.sin(angle);
                            return (
                                <text 
                                    x={x} y={y} 
                                    text-anchor="middle" 
                                    dominant-baseline="middle"
                                    class="hour-number"
                                    font-size="18"
                                    font-weight="bold"
                                    fill="#2d3748"
                                >
                                    {hour}
                                </text>
                            );
                        })}
                        
                        <!-- Clock hands -->
                        <line id="quizHourHand" x1="150" y1="150" x2="150" y2="90" 
                              stroke="#667eea" stroke-width="6" stroke-linecap="round"/>
                        <line id="quizMinuteHand" x1="150" y1="150" x2="150" y2="60" 
                              stroke="#4fd1c5" stroke-width="4" stroke-linecap="round"/>
                        
                        <!-- Center dot -->
                        <circle cx="150" cy="150" r="8" fill="#2d3748"/>
                    </svg>
                    
                    <div class="digital-display" id="digitalDisplay">12:00</div>
                </div>

                <div class="question-text">Hur mycket √§r klockan?<br><span class="question-subtext">(What time is it?)</span></div>

                <div class="answers-grid" id="answersGrid">
                    <!-- Answers will be inserted here -->
                </div>

                <div class="feedback hidden" id="feedback">
                    <div class="feedback-content"></div>
                </div>
            </div>

            <div class="quiz-actions">
                <button class="action-btn secondary" id="skipBtn">Skip Question</button>
                <button class="action-btn primary hidden" id="nextBtn">Next Question ‚Üí</button>
            </div>
        </div>

        <div class="results-container hidden" id="resultsContainer">
            <h2>üéâ Quiz Complete!</h2>
            <div class="results-stats">
                <div class="stat-card">
                    <div class="stat-value" id="finalScore">0</div>
                    <div class="stat-label">Correct Answers</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="finalTotal">0</div>
                    <div class="stat-label">Total Questions</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="finalPercentage">0%</div>
                    <div class="stat-label">Accuracy</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="finalStreak">0</div>
                    <div class="stat-label">Best Streak</div>
                </div>
            </div>
            
            <div class="results-actions">
                <button class="action-btn primary" id="restartBtn">Try Again</button>
                <a href="/sfi/klockan" class="action-btn secondary">Back to Learning</a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .exercise-container {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        width: 100%;
        margin: 0 auto;
    }

    h1 {
        text-align: center;
        color: var(--primary-color);
        margin-bottom: 20px;
        font-size: 2.5em;
    }

    .header-with-back {
        position: relative;
        margin-bottom: 20px;
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 10px 20px;
        background: #e2e8f0;
        color: #2d3748;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s ease;
        margin-bottom: 15px;
    }

    .back-btn:hover {
        background: #cbd5e0;
        transform: translateX(-3px);
    }

    h2 {
        text-align: center;
        color: var(--primary-color);
        margin-bottom: 25px;
        font-size: 1.8em;
    }

    .quiz-intro {
        text-align: center;
        font-size: 1.1em;
        color: #4a5568;
        margin-bottom: 40px;
    }

    .difficulty-selection {
        margin: 40px 0;
    }

    .difficulty-buttons {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .difficulty-btn {
        background: white;
        border: 3px solid #e2e8f0;
        border-radius: 15px;
        padding: 25px 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
    }

    .difficulty-btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        border-color: var(--primary-color);
    }

    .difficulty-icon {
        font-size: 3em;
        margin-bottom: 10px;
    }

    .difficulty-name {
        font-size: 1.3em;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 5px;
    }

    .difficulty-desc {
        font-size: 0.9em;
        color: #718096;
    }

    .quiz-container {
        margin-top: 30px;
    }

    .quiz-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        color: white;
        margin-bottom: 30px;
        flex-wrap: wrap;
        gap: 15px;
    }

    .score-display, .streak-display {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 1.2em;
        font-weight: 600;
    }

    .quit-btn {
        background: rgba(255, 255, 255, 0.2);
        border: 2px solid white;
        color: white;
        padding: 8px 20px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.2s;
    }

    .quit-btn:hover {
        background: white;
        color: var(--primary-color);
    }

    .question-container {
        background: #f8fafc;
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 20px;
    }

    .question-number {
        text-align: center;
        font-size: 1.1em;
        color: #718096;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .clock-display {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 30px;
    }

    .quiz-clock {
        max-width: 300px;
        width: 100%;
        height: auto;
        margin-bottom: 15px;
        filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.1));
    }

    .digital-display {
        font-size: 2.5em;
        font-weight: bold;
        color: var(--primary-color);
        font-family: 'Courier New', monospace;
    }

    .question-text {
        text-align: center;
        font-size: 1.5em;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 25px;
    }

    .question-subtext {
        font-size: 0.7em;
        color: #718096;
        font-weight: 400;
        font-style: italic;
    }

    .answers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 20px;
    }

    .answer-btn {
        background: white;
        border: 3px solid #e2e8f0;
        border-radius: 12px;
        padding: 20px;
        font-size: 1.1em;
        font-weight: 600;
        color: #2d3748;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
    }

    .answer-btn:hover:not(.correct):not(.incorrect):not(:disabled) {
        border-color: var(--primary-color);
        background: #f7fafc;
        transform: translateY(-2px);
    }

    .answer-btn.correct {
        background: #48bb78;
        border-color: #38a169;
        color: white;
        animation: correctPulse 0.5s ease;
    }

    .answer-btn.incorrect {
        background: #f56565;
        border-color: #e53e3e;
        color: white;
        animation: shake 0.5s ease;
    }

    .answer-btn:disabled {
        cursor: not-allowed;
        opacity: 0.6;
    }

    @keyframes correctPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-10px); }
        75% { transform: translateX(10px); }
    }

    .feedback {
        margin-top: 20px;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        font-size: 1.1em;
        font-weight: 600;
    }

    .feedback.correct {
        background: #c6f6d5;
        color: #22543d;
        border: 2px solid #48bb78;
    }

    .feedback.incorrect {
        background: #fed7d7;
        color: #742a2a;
        border: 2px solid #f56565;
    }

    .quiz-actions {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .action-btn {
        padding: 15px 35px;
        border: none;
        border-radius: 12px;
        font-size: 1.1em;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .action-btn.primary {
        background: var(--primary-color);
        color: white;
    }

    .action-btn.secondary {
        background: #e2e8f0;
        color: #2d3748;
    }

    .action-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .results-container {
        text-align: center;
        padding: 40px 20px;
    }

    .results-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin: 40px 0;
    }

    .stat-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px 20px;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
    }

    .stat-value {
        font-size: 3em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .stat-label {
        font-size: 1em;
        opacity: 0.9;
    }

    .results-actions {
        display: flex;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 30px;
    }

    .hidden {
        display: none !important;
    }

    @media (max-width: 600px) {
        .exercise-container {
            padding: 20px;
        }

        h1 {
            font-size: 2em;
        }

        .difficulty-buttons {
            grid-template-columns: 1fr;
        }

        .answers-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    import { clockTimes, getRandomTime, getRandomTimesByCategory, generateWrongAnswers, type ClockTime } from '../../data/clock';

    let currentDifficulty: string = '';
    let currentQuestion: ClockTime | null = null;
    let score = 0;
    let totalQuestions = 0;
    let currentStreak = 0;
    let bestStreak = 0;
    let answeredQuestions = new Set<string>();

    const difficultySelection = document.getElementById('difficultySelection')!;
    const quizContainer = document.getElementById('quizContainer')!;
    const resultsContainer = document.getElementById('resultsContainer')!;
    const scoreValue = document.getElementById('scoreValue')!;
    const streakValue = document.getElementById('streakValue')!;
    const questionNumber = document.getElementById('questionNumber')!;
    const digitalDisplay = document.getElementById('digitalDisplay')!;
    const answersGrid = document.getElementById('answersGrid')!;
    const feedback = document.getElementById('feedback')!;
    const nextBtn = document.getElementById('nextBtn')!;
    const skipBtn = document.getElementById('skipBtn')!;
    const quitBtn = document.getElementById('quitBtn')!;
    const restartBtn = document.getElementById('restartBtn')!;
    const quizHourHand = document.getElementById('quizHourHand')!;
    const quizMinuteHand = document.getElementById('quizMinuteHand')!;

    function startQuiz(difficulty: string) {
        currentDifficulty = difficulty;
        score = 0;
        totalQuestions = 0;
        currentStreak = 0;
        bestStreak = 0;
        answeredQuestions.clear();
        
        difficultySelection.classList.add('hidden');
        quizContainer.classList.remove('hidden');
        
        loadNextQuestion();
    }

    function getQuestionPool(): ClockTime[] {
        switch (currentDifficulty) {
            case 'exact':
                return clockTimes.filter(t => t.category === 'exact');
            case 'quarter':
                return clockTimes.filter(t => t.category === 'quarter');
            case 'half':
                return clockTimes.filter(t => t.category === 'half');
            case 'mixed':
            default:
                return clockTimes;
        }
    }

    function loadNextQuestion() {
        const pool = getQuestionPool();
        const availableQuestions = pool.filter(t => 
            !answeredQuestions.has(`${t.hour}:${t.minute}`)
        );

        if (availableQuestions.length === 0) {
            showResults();
            return;
        }

        currentQuestion = availableQuestions[Math.floor(Math.random() * availableQuestions.length)];
        totalQuestions++;

        questionNumber.textContent = `Question ${totalQuestions}`;
        scoreValue.textContent = `${score}/${totalQuestions - 1}`;
        
        updateClockDisplay(currentQuestion.hour, currentQuestion.minute);
        generateAnswers(currentQuestion);
        
        feedback.classList.add('hidden');
        nextBtn.classList.add('hidden');
        skipBtn.classList.remove('hidden');
    }

    function updateClockDisplay(hour: number, minute: number) {
        digitalDisplay.textContent = `${hour}:${minute.toString().padStart(2, '0')}`;
        
        const minuteAngle = (minute * 6 - 90) * Math.PI / 180;
        const hourAngle = ((hour % 12 + minute / 60) * 30 - 90) * Math.PI / 180;
        
        const minuteX = 150 + 90 * Math.cos(minuteAngle);
        const minuteY = 150 + 90 * Math.sin(minuteAngle);
        const hourX = 150 + 60 * Math.cos(hourAngle);
        const hourY = 150 + 60 * Math.sin(hourAngle);
        
        quizMinuteHand.setAttribute('x2', minuteX.toString());
        quizMinuteHand.setAttribute('y2', minuteY.toString());
        quizHourHand.setAttribute('x2', hourX.toString());
        quizHourHand.setAttribute('y2', hourY.toString());
    }

    function generateAnswers(correctAnswer: ClockTime) {
        const wrongAnswers = generateWrongAnswers(correctAnswer, 3);
        const allAnswers = [correctAnswer.swedish, ...wrongAnswers];
        
        // Shuffle answers
        allAnswers.sort(() => Math.random() - 0.5);
        
        answersGrid.innerHTML = '';
        allAnswers.forEach(answer => {
            const btn = document.createElement('button');
            btn.className = 'answer-btn';
            btn.textContent = answer;
            btn.addEventListener('click', () => checkAnswer(answer, correctAnswer.swedish));
            answersGrid.appendChild(btn);
        });
    }

    function checkAnswer(selected: string, correct: string) {
        const isCorrect = selected === correct;
        const buttons = answersGrid.querySelectorAll('.answer-btn');
        
        buttons.forEach(btn => {
            btn.setAttribute('disabled', 'true');
            if (btn.textContent === correct) {
                btn.classList.add('correct');
            } else if (btn.textContent === selected && !isCorrect) {
                btn.classList.add('incorrect');
            }
        });

        if (isCorrect) {
            score++;
            currentStreak++;
            bestStreak = Math.max(bestStreak, currentStreak);
            feedback.className = 'feedback correct';
            feedback.querySelector('.feedback-content')!.textContent = '‚úÖ Correct! Well done!';
            speak(correct);
        } else {
            currentStreak = 0;
            feedback.className = 'feedback incorrect';
            feedback.querySelector('.feedback-content')!.innerHTML = 
                `‚ùå Incorrect. The correct answer is: <strong>${correct}</strong>`;
        }

        feedback.classList.remove('hidden');
        scoreValue.textContent = `${score}/${totalQuestions}`;
        streakValue.textContent = currentStreak.toString();
        
        if (currentQuestion) {
            answeredQuestions.add(`${currentQuestion.hour}:${currentQuestion.minute}`);
        }

        skipBtn.classList.add('hidden');
        nextBtn.classList.remove('hidden');
    }

    function speak(text: string) {
        if (!('speechSynthesis' in window)) return;
        window.speechSynthesis.cancel();
        const utterance = new SpeechSynthesisUtterance(text);
        utterance.lang = 'sv-SE';
        utterance.rate = 0.8;
        window.speechSynthesis.speak(utterance);
    }

    function showResults() {
        quizContainer.classList.add('hidden');
        resultsContainer.classList.remove('hidden');
        
        const percentage = totalQuestions > 0 ? Math.round((score / totalQuestions) * 100) : 0;
        
        document.getElementById('finalScore')!.textContent = score.toString();
        document.getElementById('finalTotal')!.textContent = totalQuestions.toString();
        document.getElementById('finalPercentage')!.textContent = `${percentage}%`;
        document.getElementById('finalStreak')!.textContent = bestStreak.toString();
    }

    function resetQuiz() {
        resultsContainer.classList.add('hidden');
        difficultySelection.classList.remove('hidden');
    }

    // Event listeners
    document.querySelectorAll('.difficulty-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            const difficulty = btn.getAttribute('data-difficulty')!;
            startQuiz(difficulty);
        });
    });

    nextBtn.addEventListener('click', loadNextQuestion);
    skipBtn.addEventListener('click', () => {
        if (currentQuestion) {
            answeredQuestions.add(`${currentQuestion.hour}:${currentQuestion.minute}`);
        }
        currentStreak = 0;
        streakValue.textContent = '0';
        loadNextQuestion();
    });
    quitBtn.addEventListener('click', showResults);
    restartBtn.addEventListener('click', resetQuiz);
</script>

</Layout>
